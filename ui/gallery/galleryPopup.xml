<MOML version="1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.applusform.com/xsd/moml_ui.xsd">
    
    <THEMES id="themeMenu" >
		<THEME id="thLabel1"  fontSize="12" textAlign="center|vCenter" fontColor="#c1a77e" fontShadow="#333388" borderStyle="solid:1|#80a0a0a0" />
	</THEMES>
   

	<UI>
		<UILAYOUT portrait="320,390" landscape="320,390" theme="themeMenu" >
			 <AGATEWEBVIEW id="webView" layout="0,50,320,390" src="http://fileslink.com/" _src="image.htm" supportZoom="true" controls="none" defaultImg="#01ffffff">
                <LINKMAP>					
                    <!-- 이미지 업로드 -->
                    <LINK url="http://fileslink.com/*" jsPlugin="/ui/gallery/upload.js" delay="500"/>
                </LINKMAP>
            </AGATEWEBVIEW>			
			<STYLEBUTTON themeId="thLabel1" layout="100,360,60,30" text="링크복사" onClick="function.coverflowClick" style="round" defaultImg="#ff7e3c"/>
			<STYLEBUTTON themeId="thLabel1" layout="170,360,40,30" text="닫기" onClick="galleryPopup.webView.back" style="round" defaultImg="#ff7e3c"/>
			<WINDOW layout="100,340,320,200" align="linear:center" >
				<LABEL id="help" themeId="help" layout="auto,auto" text="이미지 팝업 닫기는 상단에 뒤로가기 버튼을 눌러주세요."  visible="invisible"/>
			</WINDOW>
        </UILAYOUT>
    </UI>
    
    <FUNCTIONCALL cmd="function.coverflowChange(0)" /> 
	<FUNCTIONCALL cmd="userVariable.galleryVisible='true'" /> 

	<FUNCTIONLIST>
		<FUNCTION id="coverflowChange(index)">
			<FUNCTIONITEM cmd="userVariable.coverflowIndex = math.add(index,1)" />
		</FUNCTION>	
	</FUNCTIONLIST>

</MOML>
