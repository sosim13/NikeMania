<MOML version="1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.applusform.com/xsd/moml_ui.xsd">
    
    <THEMES id="themeMenu" >
		<THEME id="thLabel1"  fontSize="12" textAlign="center|vCenter" fontColor="#c1a77e" fontShadow="#333388" borderStyle="solid:1|#80a0a0a0" />
	</THEMES>
   

	<UI>
		<UILAYOUT portrait="320,390" landscape="320,390" theme="themeMenu" >
			 <AGATEWEBVIEW id="webView" layout="0,50,320,390" src="https://postimages.org" _src="image.htm" supportZoom="true" controls="none" defaultImg="#01ffffff" jsBridge="false">
                <LINKMAP>					
                    <!-- 이미지 업로드 -->
                    <LINK url="https://postimages.org/*" jsPlugin="../js/uploadImg.js" delay="500"/>
                </LINKMAP>
            </AGATEWEBVIEW>		 	
			<STYLEBUTTON themeId="thLabel1" layout="100,360,60,30" text="링크복사" onClick="code_direct.click" style="round" defaultImg="#ff7e3c"/>
			<STYLEBUTTON themeId="thLabel1" layout="170,360,40,30" text="닫기" onClick="container.close" style="round" defaultImg="#ff7e3c"/>
        </UILAYOUT>
    </UI>
    
    <FUNCTIONCALL cmd="function.coverflowChange(0)" /> 
	<FUNCTIONCALL cmd="userVariable.galleryVisible='true'" /> 

	<FUNCTIONLIST>
		<FUNCTION id="coverflowChange(index)">
			<FUNCTIONITEM cmd="userVariable.coverflowIndex = math.add(index,1)" />
		</FUNCTION>	
	</FUNCTIONLIST>

</MOML>
